<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aikodasistani.aikodasistani">

    <!-- İnternet ve dosya erişimi -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Kamera ve video için İZİNLER -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Galeri / Dosya seçmek için -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 29 ve altı cihazlar için -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <!-- Donanım özellikleri -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.front" android:required="false" />
    <uses-feature android:name="android.hardware.camera.any" android:required="false" />
    <uses-feature android:name="android.hardware.microphone" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="AI Kod Asistanı"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.AIKodAsistani">

        <!-- WebView kameradan fotoğraf çekerken buradan URI alır -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Ana Aktivite -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Oturumlar Aktivitesi -->
        <activity android:name=".SessionsActivity" />

        <!-- Kod Parçaları Aktivitesi -->
        <activity 
            android:name=".SnippetsActivity"
            android:label="@string/snippets_title" />

        <!-- Geliştirici Araçları Aktivitesi -->
        <activity 
            android:name=".DeveloperToolsActivity"
            android:label="@string/dev_tools_title" />

        <!-- Kod Playground Aktivitesi -->
        <activity 
            android:name=".CodePlaygroundActivity"
            android:label="@string/code_playground_title" />

        <!-- Günlük Soru Aktivitesi -->
        <activity 
            android:name=".DailyChallengeActivity"
            android:label="@string/daily_challenge_title" />

        <!-- Öğrenme Merkezi Aktivitesi -->
        <activity 
            android:name=".LearningHubActivity"
            android:label="@string/learning_hub_title" />

        <!-- Kod Şablonları Aktivitesi -->
        <activity 
            android:name=".CodeTemplatesActivity"
            android:label="@string/code_templates_title" />

        <!-- İstatistikler Aktivitesi -->
        <activity 
            android:name=".StatisticsActivity"
            android:label="@string/statistics_title" />

        <!-- API Tester Aktivitesi -->
        <activity 
            android:name=".ApiTesterActivity"
            android:label="@string/api_tester_title" />

        <!-- Kod Karşılaştırma Aktivitesi -->
        <activity 
            android:name=".CodeDiffActivity"
            android:label="@string/code_diff_title" />

        <!-- Favoriler Merkezi Aktivitesi -->
        <activity 
            android:name=".FavoritesCenterActivity"
            android:label="@string/favorites_center_title" />

        <!-- Ana Ekran Widget'ı -->
        <receiver
            android:name=".widget.QuickActionWidgetProvider"
            android:exported="true"
            android:label="@string/widget_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_quick_action_info" />
        </receiver>

    </application>

</manifest>