<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Language Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_language"
            android:textSize="14sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginTop="8dp">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupLanguages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </HorizontalScrollView>

        <!-- Error Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/paste_error_message"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <EditText
            android:id="@+id/editTextError"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="@string/error_input_hint"
            android:padding="12dp"
            android:background="@drawable/bg_code_preview"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:fontFamily="monospace"
            android:textSize="13sp"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnAnalyze"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/analyze_error"
            android:layout_marginTop="16dp" />

        <!-- Result Section -->
        <LinearLayout
            android:id="@+id/resultContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/error_type"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvErrorType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/explanation"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvExplanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/solutions"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvSolution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/code_example"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvCodeExample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_code_preview"
                android:padding="12dp"
                android:fontFamily="monospace"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

            <Button
                android:id="@+id/btnCopySolution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/copy_solution"
                android:layout_marginTop="12dp" />

        </LinearLayout>

        <!-- Common Errors Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/common_errors"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCommonErrors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clipToPadding="false" />

    </LinearLayout>

</ScrollView>
