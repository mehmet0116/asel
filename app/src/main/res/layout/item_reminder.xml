<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Left section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/tvReminderTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reminder Title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Time -->
            <TextView
                android:id="@+id/tvReminderTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏰ 09:00"
                android:textSize="14sp"
                android:textColor="@color/primary_color"
                android:layout_marginTop="4dp" />

            <!-- Type and days -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvReminderType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Günlük"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:background="@drawable/bg_language_badge"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp" />

                <TextView
                    android:id="@+id/tvReminderDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Her gün"
                    android:textSize="12sp"
                    android:textColor="@color/text_hint"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Right section - controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchEnabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/btnEditReminder"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_more_vert"
                app:tint="@color/text_secondary"
                android:contentDescription="@string/edit_reminder" />

            <ImageButton
                android:id="@+id/btnDeleteReminder"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_clear"
                app:tint="@color/error_color"
                android:contentDescription="@string/delete_reminder_title" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
