<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/widget_background"
    android:gravity="center">

    <!-- Voice Input Button -->
    <LinearLayout
        android:id="@+id/btnWidgetVoice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_mic"
            android:contentDescription="@string/voice_input_description" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/widget_voice"
            android:textSize="10sp"
            android:textColor="@color/white" />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:alpha="0.3" />

    <!-- Code Playground Button -->
    <LinearLayout
        android:id="@+id/btnWidgetPlayground"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_play"
            android:contentDescription="@string/code_playground_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/widget_playground"
            android:textSize="10sp"
            android:textColor="@color/white" />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:alpha="0.3" />

    <!-- Developer Tools Button -->
    <LinearLayout
        android:id="@+id/btnWidgetTools"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_tools"
            android:contentDescription="@string/dev_tools_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/widget_tools"
            android:textSize="10sp"
            android:textColor="@color/white" />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:alpha="0.3" />

    <!-- New Chat Button -->
    <LinearLayout
        android:id="@+id/btnWidgetNewChat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_add"
            android:contentDescription="@string/widget_new_chat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/widget_new_chat"
            android:textSize="10sp"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>
