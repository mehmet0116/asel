<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Regex Pattern Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPattern"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/regex_pattern_hint">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPattern"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:fontFamily="monospace"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Common Patterns Chips -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/common_patterns"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurface"
            android:alpha="0.6" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupPatterns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipEmail"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipUrl"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="URL" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipPhone"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefon" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipIp"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IP" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipHexColor"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hex Renk" />

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

        <!-- Test String Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilTestString"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/regex_test_string_hint">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTestString"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:maxLines="6"
                android:textSize="14sp"
                android:gravity="top|start" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Action Button -->
        <Button
            android:id="@+id/btnTest"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/test_regex" />

        <!-- Results Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/matches"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvMatchCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/no_matches"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurface"
            android:alpha="0.6" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <TextView
                android:id="@+id/tvMatches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:fontFamily="monospace"
                android:textSize="12sp"
                android:minHeight="100dp"
                android:text="@string/output_placeholder" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
