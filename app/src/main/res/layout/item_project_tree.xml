<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:background="?attr/selectableItemBackground">

    <!-- Indentation spacer - will be adjusted programmatically -->
    <View
        android:id="@+id/viewIndent"
        android:layout_width="0dp"
        android:layout_height="1dp" />

    <!-- Expand/Collapse icon for folders -->
    <ImageView
        android:id="@+id/ivExpand"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_arrow_down"
        android:visibility="gone"
        android:contentDescription="@string/zip_expand_collapse"
        app:tint="?attr/colorOnSurface" />

    <!-- File/Folder icon -->
    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/ic_file"
        android:contentDescription="@string/zip_item_icon"
        app:tint="@color/purple_500" />

    <!-- File/Folder name -->
    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:text="filename.kt"
        android:textSize="13sp"
        android:textColor="?attr/colorOnSurface"
        android:ellipsize="middle"
        android:singleLine="true" />

    <!-- File size (only for files) -->
    <TextView
        android:id="@+id/tvSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="1.2 KB"
        android:textSize="11sp"
        android:textColor="@color/gray"
        android:visibility="gone" />

</LinearLayout>
