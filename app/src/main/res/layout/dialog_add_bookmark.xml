<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etBookmarkTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/bookmark_title_hint"
        android:inputType="text"
        android:maxLines="1" />

    <EditText
        android:id="@+id/etBookmarkContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="top|start"
        android:hint="@string/bookmark_content_hint"
        android:inputType="textMultiLine"
        android:minLines="4"
        android:maxLines="10" />

    <EditText
        android:id="@+id/etBookmarkCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/bookmark_category_hint"
        android:inputType="text"
        android:maxLines="1" />

    <EditText
        android:id="@+id/etBookmarkTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/bookmark_tags_hint"
        android:inputType="text"
        android:maxLines="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/bookmark_tags_helper"
        android:textColor="@color/text_tertiary"
        android:textSize="12sp" />

</LinearLayout>
