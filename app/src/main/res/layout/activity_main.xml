<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    tools:openDrawer="start">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background_primary">

        <!-- Modern Toolbar with Gradient -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient_primary"
            android:elevation="8dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextAppearance="@style/TextAppearance.AppCompat.Title" />

        <!-- RecyclerView for Messages with better padding -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:scrollbars="vertical"
            android:overScrollMode="always" />

        <!-- Modern Attachment Previews -->
        <HorizontalScrollView
            android:id="@+id/attachmentPreviewContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"
            android:visibility="gone"
            android:background="@color/surface_elevated"
            android:scrollbars="none"
            android:fadeScrollbars="true">

            <LinearLayout
                android:id="@+id/imagePreviewList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        <!-- Premium Input Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="16dp"
            android:background="@color/surface_card"
            android:elevation="12dp"
            android:gravity="center_vertical">

            <!-- Modern Attachment Button -->
            <ImageButton
                android:id="@+id/buttonAttachment"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_attachment"
                app:tint="@color/primary_main"
                android:scaleType="centerInside"
                android:contentDescription="@string/send_button_description"
                android:onClick="onAttachmentButtonClicked" />

            <!-- Premium Deep Thinking Button -->
            <ImageButton
                android:id="@+id/buttonDeepThink"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_brain"
                android:scaleType="centerInside"
                android:contentDescription="@string/deep_thinking_description"
                app:tint="@color/accent_pink" />

            <!-- Premium Message Input -->
            <EditText
                android:id="@+id/editTextMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/message_hint"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="6"
                android:minHeight="52dp"
                android:background="@drawable/bg_input_field"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_tertiary"
                android:fontFamily="sans-serif"
                android:textSize="16sp"
                android:lineSpacingExtra="2dp"
                android:imeOptions="actionSend"
                android:privateImeOptions="nm" />

            <!-- Premium Send Button (Circular with Gradient) -->
            <ImageButton
                android:id="@+id/buttonSend"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_button_primary"
                android:src="@drawable/ic_send"
                android:scaleType="centerInside"
                android:elevation="6dp"
                android:stateListAnimator="@null"
                app:tint="@color/white"
                android:contentDescription="@string/send_button_description" />

        </LinearLayout>

    </LinearLayout>

    <!-- Premium Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <!-- Blur-like overlay -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/overlay_light" />

        <!-- Modern Loading Card -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="28dp"
            android:paddingBottom="28dp"
            android:background="@drawable/loading_background"
            android:elevation="16dp">

            <ProgressBar
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:indeterminate="true"
                style="?android:attr/progressBarStyle" />

            <TextView
                android:id="@+id/loadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="YÃ¼kleniyor..."
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/buttonCancelSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/cancel_sending"
                android:visibility="gone"
                style="@style/Widget.Material3.Button.TextButton" />

        </LinearLayout>

    </FrameLayout>

    <!-- Navigation Drawer with Modern Style -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/surface_card"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"
        app:itemIconTint="@color/primary_main"
        app:itemTextColor="@color/text_primary"
        app:itemShapeFillColor="@color/surface_elevated"
        app:itemShapeInsetStart="8dp"
        app:itemShapeInsetEnd="8dp"
        app:itemShapeInsetTop="4dp"
        app:itemShapeInsetBottom="4dp" />

</androidx.drawerlayout.widget.DrawerLayout>
