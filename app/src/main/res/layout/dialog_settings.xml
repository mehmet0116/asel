            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="API anahtarlarÄ±nÄ±zÄ± gÃ¼venli bir ÅŸekilde saklayÄ±n"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="24dp" />

        <!-- OpenAI Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface_elevated">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/openai_api_key_label"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    style="@style/TextAppearance.Material3.LabelLarge"/>

                <EditText
                    android:id="@+id/editTextOpenAiKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:layout_marginTop="8dp"
                    android:hint="@string/openai_api_key_hint"
                    android:inputType="textPassword"
                    android:background="@drawable/bg_input_field"
                    android:textColor="@color/text_primary"
                    android:autofillHints="password" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Gemini Card -->
        <androidx.cardview.widget.CardView
