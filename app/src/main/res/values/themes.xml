<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AIKodAsistani" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary_main</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary_main</item>
        <item name="colorSecondaryContainer">@color/secondary_light</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/surface_primary</item>
        <item name="colorSurfaceVariant">@color/surface_elevated</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- Other colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOutline">@color/border_color</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_main</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/surface_primary</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- Enable window content transitions -->
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
    </style>

    <style name="Theme.AIKodAsistani" parent="Base.Theme.AIKodAsistani" />

    <!-- Custom Dialog Theme -->
    <style name="Theme.AIKodAsistani.Dialog" parent="ThemeOverlay.Material3.Dialog.Alert">
        <item name="dialogCornerRadius">24dp</item>
        <item name="android:background">@color/surface_primary</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.AIKodAsistani.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.AIKodAsistani.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.AIKodAsistani.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">4dp</item>
    </style>
</resources>
