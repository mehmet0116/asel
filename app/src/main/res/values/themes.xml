<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Premium Edition -->
    <style name="Base.Theme.AIKodAsistani" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary_main</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorPrimaryInverse">@color/primary_light</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary_main</item>
        <item name="colorSecondaryContainer">@color/secondary_light</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Tertiary colors -->
        <item name="colorTertiary">@color/accent_pink</item>
        <item name="colorOnTertiary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/surface_primary</item>
        <item name="colorSurfaceVariant">@color/surface_elevated</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- Other colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOutline">@color/border_color</item>
        <item name="colorOutlineVariant">@color/divider_color</item>

        <!-- Status bar - Premium gradient color -->
        <item name="android:statusBarColor">@color/primary_gradient_start</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- Navigation bar - Clean surface -->
        <item name="android:navigationBarColor">@color/surface_card</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- Enable window content transitions -->
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        
        <!-- Smooth animations -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>
    </style>

    <style name="Theme.AIKodAsistani" parent="Base.Theme.AIKodAsistani" />

    <!-- Custom Dialog Theme - Premium -->
    <style name="Theme.AIKodAsistani.Dialog" parent="ThemeOverlay.Material3.Dialog.Alert">
        <item name="dialogCornerRadius">28dp</item>
        <item name="android:background">@color/surface_card</item>
        <item name="colorPrimary">@color/primary_main</item>
        <item name="colorSecondary">@color/secondary_main</item>
    </style>

    <!-- Button Styles - Premium -->
    <style name="Widget.AIKodAsistani.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="Widget.AIKodAsistani.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="strokeColor">@color/primary_main</item>
    </style>

    <!-- Card Styles - Premium -->
    <style name="Widget.AIKodAsistani.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/surface_card</item>
    </style>
    
    <!-- Window Animation Style -->
    <style name="WindowAnimationStyle">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>
