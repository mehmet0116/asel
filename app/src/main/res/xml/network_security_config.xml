<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>

    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">api.openai.com</domain>
        <domain includeSubdomains="true">generativelanguage.googleapis.com</domain>
        <domain includeSubdomains="true">dashscope-intl.aliyuncs.com</domain>
        <domain includeSubdomains="true">dashscope.aliyuncs.com</domain>
        <domain includeSubdomains="true">api.deepseek.com</domain>
    </domain-config>
</network-security-config>